{
  "compilerOptions": {

    "target": "es6",
    "module": "es2020",
    "baseUrl": "./src",
    "rootDir": "./src",

    "paths": {
	    "~/*": [ "./src/*" ]
    },

    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": false,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    "skipLibCheck": true,
    "types": ["node", "jest"]
  }, 
  "include": [
	  "src/**/*.js",
	  "src/**/*.jsx",
	  "src/**/*.ts",
	  "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "src/**/*.test.*"
  ]
}
